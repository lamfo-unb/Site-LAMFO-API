# Environment variables for LAMFO API
# Copy this file to .env and fill in the actual values

# Application environment (used for logging and debugging)
# Options: production, development, staging
ENVIRONMENT=production

# Test mode - set to true for SQLite, false for PostgreSQL
TEST_MODE=false

# SQLite settings (used when TEST_MODE=true or as fallback)
SQLITE_URL=sqlite:///./test.db

# PostgreSQL connection settings (used when TEST_MODE=false)
# IMPORTANT: All PostgreSQL variables must be set when TEST_MODE=false
POSTGRES_USER=lamfo
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=database
POSTGRES_PORT=5432
POSTGRES_DB=lamfo_db

# Python path (usually set automatically in Docker)
# PYTHONPATH=/app
